---
import { fade } from 'astro:transitions';

interface Props {
  title: string;
  value: string;
  change: string;
  trend: 'up' | 'down';
}

const { title, value, change, trend } = Astro.props;
---

<div 
  class="bg-white border border-starlight-border rounded-lg p-6 transition-all hover:shadow-lg"
  transition:animate={fade({ duration: '0.2s' })}
>
  <h3 class="text-starlight-text/70 text-sm font-medium">{title}</h3>
  <div class="mt-2 flex items-baseline">
    <p class="text-2xl font-semibold text-starlight-text">{value}</p>
    <p class={`ml-2 text-sm font-medium ${trend === 'up' ? 'text-emerald-600' : 'text-rose-600'}`}>
      {trend === 'up' ? '↑' : '↓'} {change}
    </p>
  </div>
</div>
---
import '@fontsource/inter/400.css';
import '@fontsource/inter/500.css';
import '@fontsource/inter/600.css';
import '@fontsource/inter/700.css';
import { ClientRouter, fade } from 'astro:transitions';
import Header from '../components/Dashboard/Header.astro';
import Sidebar from '../components/Dashboard/Sidebar.astro';
import { verifyToken } from '../services/auth';

interface Props {
  title: string;
}

const { title } = Astro.props;

// Verificar autenticaci√≥n
const token = Astro.cookies.get('admin-token')?.value;
const admin = token ? await verifyToken(token) : null;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Panel de Control de ClientFy" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title} | ClientFy Usuarios</title>
    <ClientRouter />
  </head>
  <body class="bg-starlight-background font-sans">
    <div class="flex h-screen">
      <Sidebar />
      <div class="flex-1 flex flex-col overflow-hidden">
        <Header />
        <main
          class="flex-1 overflow-x-hidden overflow-y-auto p-6"
          transition:animate={fade({ duration: '0.3s' })}
        >
          <slot />
        </main>
      </div>
    </div>
  </body>
</html>
